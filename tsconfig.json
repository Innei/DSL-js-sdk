{
  "compilerOptions": {
    "target": "ESNext",
    "declaration": true,
    "strict": true,
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "outDir": "lib",
    "paths": {
      "@rss3/js-sdk": ["./src/index.ts"],
      "@rss3/js-sdk/lib/data/client.js": ["./src/data/client.ts"]
    }
  },
  "exclude": ["lib", "src/**/*.test.ts"]
}
